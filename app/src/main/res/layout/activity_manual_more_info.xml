<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualMoreInfo">


    <TextView
        android:id="@+id/more_info"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="1dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Where to go for more information"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/more_info1"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:gravity="center"
        android:text="For medication instructions call/go to pharmacist"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/more_info" />


    <EditText
        android:id="@+id/ed5"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/more_info1" />


    <TextView
        android:id="@+id/for1"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:text="For"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed5" />

    <EditText
        android:id="@+id/ed6"
        android:layout_width="115dp"
        android:layout_height="42dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/for1"
        app:layout_constraintTop_toBottomOf="@+id/ed5" />

    <TextView
        android:id="@+id/go_to"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:text="go to"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ed6"
        app:layout_constraintTop_toBottomOf="@+id/ed5" />


    <EditText
        android:id="@+id/ed7"
        android:layout_width="91dp"
        android:layout_height="42dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/go_to"
        app:layout_constraintTop_toBottomOf="@+id/ed5" />


    <TextView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:gravity="center"
        android:text="call"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ed7"
        app:layout_constraintTop_toBottomOf="@+id/ed5" />


    <EditText
        android:id="@+id/ed8"
        android:layout_width="91dp"
        android:layout_height="42dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/call"
        app:layout_constraintTop_toBottomOf="@+id/ed5" />


    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="1dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="My own notes"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/for1" />


    <EditText
        android:id="@+id/ed10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="1dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Add your notes here"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/notes" />


    <Button
        android:id="@+id/submit"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:background="@color/commentTitle"
        android:onClick="onClick_submit"
        android:text="submit"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>